@model DoAn.Models.tblTaiKhoan
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa tài khoản</h2>
    </div>
    <div class="container shadow p-5">
        <form method="post" asp-action="Edit">
            <div class="form-row">
                <input type="text" class="form-control" asp-for="TK_ID" type="hidden" />

                <div class="form-group col-md-6 mb-3">
                    <label>Họ và tên</label>
                    <input type="text" class="form-control" asp-for="TK_HoVaTen" placeholder="Nhập họ và tên" />
                    <span asp-validation-for="TK_HoVaTen" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Tên đăng nhập</label>
                    <input type=""text" class="form-control" asp-for="TK_TenDangNhap" placeholder="Nhập tên đăng nhập..." />
                    <span asp-validation-for="TK_TenDangNhap" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Mật khẩu</label>
                    <input type="text" class="form-control" asp-for="TK_MatKhau" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="TK_MatKhau" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ngày sinh</label>
                    <input type="date" class="form-control" asp-for="TK_NgaySinh" placeholder="Nhập ngày sinh" />
                    <span asp-validation-for="TK_NgaySinh" class="text-danger"></span>
                </div>
                
                <div class="form-group col-md-6 mb-3">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" asp-for="TK_DiaChi" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="TK_DiaChi" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Điện thoại</label>
                    <input type="text" class="form-control" asp-for="TK_DienThoai" placeholder="Nhập điện thoại" />
                    <span asp-validation-for="TK_DienThoai" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>TK_Email</label>
                    <input type="text" class="form-control" asp-for="TK_Email" placeholder="Nhập email" />
                    <span asp-validation-for="TK_Email" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Loại tk</label>
                    <select asp-for="TK_QuyenHan" class="form-select" id="TK_QuyenHan">
                        <option value="0">Admin</option>
                        <option value="1">Sinh viên</option>
                    </select>
                </div>
            </div>

            <a asp-controller="Account" asp-action="Index" class="btn btn-lg btn-warning p-2">
            <i class="bi bi-arrow-left-cricle"></i> Thoát
            </a>

            <button type="submit" class="btn b tn-lg btn-primary p-2">
            <i class="bi bi-file-plus-fill"></i> Lưu
            </button>
            
        </form>
    </div>
</main>