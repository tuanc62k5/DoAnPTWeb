@model DoAn.Models.tblDatPhong
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm đặt phòng mới</h2>
    </div>
    <div class="container shadow p-5">
        <form method="Post" asp-action="Create">
            <div class="form-row">

                <div class="form-group col-md-6 mb-3">
                    <label>Sinh viên</label>
                    <select class="form-control" asp-for="SV_ID" asp-items="ViewBag.svList">
                        <option value="">-- Chọn sinh viên --</option>
                    </select>
                    <span asp-validation-for="SV_ID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Chọn phòng</label>
                    <select class="form-control" asp-for="P_ID" asp-items="ViewBag.phongList">
                        <option value="">-- Chọn phòng --</option>
                    </select>
                    <span asp-validation-for="P_ID" class="text-danger"></span>
                </div>                

                <div class="form-group col-md-6 mb-3">
                    <label>Ngày đặt</label>
                    <input type="date" class="form-control" asp-for="DP_NgayDat" placeholder="Nhập ngày đặt..." />
                    <span asp-validation-for="DP_NgayDat" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Trạng thái</label>
                    <select asp-for="DP_TrangThai" class="form-select" id="DP_TrangThai">
                        <option value="">-- Chọn trạng thái --</option>
                        <option value="Đang chờ">Chờ xác nhận</option>
                        <option value="Đã xác nhận">Đã xác nhận</option>
                        <option value="Đã nhận phòng">Đã nhận phòng</option>
                        <option value="Đã trả phòng">Đã trả phòng</option>
                        <option value="Hủy đặt phòng">Hủy đặt phòng</option>
                        <option value="Từ chối">Từ chối</option>
                    </select>
                    <span asp-validation-for="DP_TrangThai" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ghi chú</label>
                    <input type="text" class="form-control" asp-for="DP_GhiChu" placeholder="Nhập ghi chú..." />
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Người tạo</label>
                    <input type="text" class="form-control" asp-for="DP_NguoiTao" placeholder="Nhập người tạo..." />
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Thời gian tạo</label>
                    <input type="date" class="form-control" asp-for="DP_ThoiGianTao" placeholder="Nhập thời gian tạo..." />
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Người sửa</label>
                    <input type="text" class="form-control" asp-for="DP_NguoiSua" placeholder="Nhập người sửa..." />
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Thời gian sửa</label>
                    <input type="date" class="form-control" asp-for="DP_ThoiGianSua" placeholder="Nhập thời gian sửa..." />
                </div>
                
            </div>

            <a asp-controller="DatPhong" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i>
                Thoát
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu
            </button>
            
        </form>
    </div>
</main>