@model DoAn.Models.tblDichVu
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa dịch vụ</h2>
    </div>
    <div class="container shadow p-5">
        <form method="post" asp-action="Edit">
            <div class="form-row">
                <input type="text" class="form-control" asp-for="DV_ID" type="hidden" />

                <div class="form-group col-md-6 mb-3">
                    <label>Tên dịch vụ</label>
                    <input type="text" class="form-control" asp-for="DV_TenDichVu" placeholder="Nhập tên dịch vụ" />
                    <span asp-validation-for="DV_TenDichVu" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Mô tả</label>
                    <input type=""text" class="form-control" asp-for="DV_MoTa" placeholder="Nhập mô tả" />
                    <span asp-validation-for="DV_MoTa" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Đơn giá</label>
                    <input type="text" class="form-control" asp-for="DV_DonGia" placeholder="Nhập đơn giá" />
                    <span asp-validation-for="DV_DonGia" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Đơn vị tính</label>
                    <input type="text" class="form-control" asp-for="DV_DonViTinh" placeholder="Nhập đơn vị tính" />
                    <span asp-validation-for="DV_DonViTinh" class="text-danger"></span>
                </div>
                
                <div class="form-group col-md-6 mb-3">
                    <label>Trạng thái</label>
                    <input type="text" class="form-control" asp-for="DV_TrangThai" placeholder="Nhập trạng thái" />
                    <span asp-validation-for="DV_TrangThai" class="text-danger"></span>
                </div>

            </div>

            <a asp-controller="DichVu" asp-action="Index" class="btn btn-lg btn-warning p-2">
            <i class="bi bi-arrow-left-cricle"></i> Thoát
            </a>

            <button type="submit" class="btn b tn-lg btn-primary p-2">
            <i class="bi bi-file-plus-fill"></i> Lưu
            </button>
            
        </form>
    </div>
</main>