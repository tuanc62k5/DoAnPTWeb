@model DoAn.Models.tblSinhVien

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chi tiết sinh viên</h2>
    </div>

    <div class="row">

        <div class="col-md-6 mb-3">
            <label class="form-label">Mã sinh viên</label>
            <input class="form-control" value="@Model.SV_MaSV" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Họ tên</label>
            <input class="form-control" value="@Model.SV_HoTen" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Giới tính</label>
            <input class="form-control" value="@Model.SV_GioiTinh" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Ngày sinh</label>
            <input class="form-control" value="@Model.SV_NgaySinh?.ToString("dd/MM/yyyy")" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Địa chỉ</label>
            <input class="form-control" value="@Model.SV_DiaChi" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" value="@Model.SV_Email" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Số điện thoại</label>
            <input class="form-control" value="@Model.SV_Sdt" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Phòng</label>
            <input class="form-control" value="@Model.Phong?.P_TenPhong" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Tài khoản</label>
            <input class="form-control" value="@Model.TaiKhoan?.TK_TenDangNhap" readonly />
        </div>

    </div>

    <a asp-area="Admin" asp-controller="SinhVien" asp-action="Index"
       class="btn btn-secondary mt-3">Quay lại</a>
</main>
