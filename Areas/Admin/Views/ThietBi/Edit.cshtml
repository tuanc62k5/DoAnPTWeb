@model DoAn.Models.tblThietBi
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa thiết bị</h2>
    </div>
    <div class="container shadow p-5">
        <form method="post" asp-action="Edit">
            <div class="form-row">
                <input type="text" class="form-control" asp-for="TB_ID" type="hidden" />

                <div class="form-group col-md-6 mb-3">
                    <label>Tên thiết bị</label>
                    <input type="text" class="form-control" asp-for="TB_TenThietBi" placeholder="Nhập tên thiết bị" />
                    <span asp-validation-for="TB_TenThietBi" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Mô tả</label>
                    <input type=""text" class="form-control" asp-for="TB_MoTa" placeholder="Nhập mô tả" />
                    <span asp-validation-for="TB_MoTa" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Đơn vị tính</label>
                    <input type="text" class="form-control" asp-for="TB_DonViTinh" placeholder="Nhập đơn vị tính" />
                    <span asp-validation-for="TB_DonViTinh" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Số lượng</label>
                    <input type="number" class="form-control" asp-for="TB_SoLuong" placeholder="Nhập số lượng" />
                    <span asp-validation-for="TB_SoLuong" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Tình trạng</label>
                    <input type="text" class="form-control" asp-for="TB_TinhTrang" placeholder="Nhập tình trạng" />
                    <span asp-validation-for="TB_TinhTrang" class="text-danger"></span>
                </div>
                
                <div class="form-group col-md-6 mb-3">
                    <label>Vị trí kho</label>
                    <input type="text" class="form-control" asp-for="TB_ViTriKho" placeholder="Nhập vị trí kho" />
                    <span asp-validation-for="TB_ViTriKho" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ngày nhập kho</label>
                    <input type="date" class="form-control" asp-for="TB_NgayNhapKho" placeholder="Nhập ngày nhập kho" />
                    <span asp-validation-for="TB_NgayNhapKho" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Ghi chú</label>
                    <input type="text" class="form-control" asp-for="TB_GhiChu" placeholder="Nhập ghi chú" />
                    <span asp-validation-for="TB_GhiChu" class="text-danger"></span>
                </div>

            </div>

            <a asp-controller="ThietBi" asp-action="Index" class="btn btn-lg btn-warning p-2">
            <i class="bi bi-arrow-left-cricle"></i> Thoát
            </a>

            <button type="submit" class="btn b tn-lg btn-primary p-2">
            <i class="bi bi-file-plus-fill"></i> Lưu
            </button>
            
        </form>
    </div>
</main>