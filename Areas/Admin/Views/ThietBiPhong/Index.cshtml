@using DoAn.Models;
@model IList<tblThietBiPhong>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách thiết bị phòng</h2>

        <p>
            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="ThietBiPhong" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i>Thêm mới thiết phòng</a>
            <section class="section dashboard">
                <div class="row">
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body mt-4">
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th class="col-1 text-center">#</th>
                                            <th class="col-2 text-center">Thiết bị</th>
                                            <th class="col-2 text-center">Phòng</th>
                                            <th class="col-2 text-center">Số lượng giao</th>
                                            <th class="col-2 text-center">Ngày giao</th>
                                            <th class="col-2 text-center">Ngày thu hồi</th>
                                            <th class="col-2 text-center">Ghi chú</th>
                                            <th class="col-1 text-center">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center" scope="row">@item.TBP_ID</td>
                                                <td class="text-center" scope="row">@item.ThietBi?.TB_TenThietBi</td>
                                                <td class="text-center" scope="row">@item.Phong?.P_TenPhong</td>
                                                <td class="text-center" scope="row">@item.TBP_SoLuongGiao</td>
                                                <td class="text-center" scope="row">@item.TBP_NgayGiao?.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center" scope="row">@item.TBP_NgayThuHoi?.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center" scope="row">@item.TBP_GhiChu</td>
                                                
                                                <td class="text-center" scope="row">
                                                    <a asp-area="Admin" asp-controller="ThietBiPhong" asp-action="Edit"
                                                        asp-route-id="@item.TBP_ID" class="btn btn-primary btn-sm"
                                                        title="Sửa thiết bị phòng"><i class="bi bi-pencil"></i></a>
                                                    <a asp-area="Admin" asp-controller="ThietBiPhong" asp-action="Delete"
                                                        asp-route-id="@item.TBP_ID" class="btn btn-danger btn-sm"
                                                        title="Xóa thiết bị phòng"><i class="bi bi-trash"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </p>
    </div>
</main>