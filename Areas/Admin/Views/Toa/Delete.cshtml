@model DoAn.Models.tblToa
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận để xóa tòa KTX</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="T_ID">T_ID</label>
            <input type="text" class="form-control mb-3" asp-for="T_ID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="T_TenToa">Tên tòa KTX</label>
            <input type="text" class="form-control mb-3" asp-for="T_TenToa" disabled />
        </div>
    </div>
    <!-- Begin Form --->
    <form asp-action="Delete" method="Post">
        <input type="hidden" asp-for="T_ID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Thoát
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash"></i> Xóa
        </button>
    </form>
    <!-- End Form -->
</main>